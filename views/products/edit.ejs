<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product</title>
  </head>
  <body>
    <h1>Edit Product</h1>
    <form action="/products/<%=productFound._id %>?_method=PUT" method="post">
      <label for="name">Product Name</label>
      <input
        type="text"
        name="name"
        placeholder="Product name"
        id="name"
        value="<%= productFound.name %>"
      />
      <label for="price">Product Price </label>
      <input
        type="number"
        name="price"
        placeholder="price"
        id="price"
        value="<%= productFound.price %>"
      />
      <label for="category">categories</label>
      <select name="category" id="category">
        <% for(let c of categories){ %>
        <option value="<%= c %>" <%= productFound.category == c ? 'selected': ''%>><%= c %></option>
        <% } %>
      </select>

      <button>Submit</button>
    </form>

    <a href="/products/<%=productFound._id %>">Cancel</a>
  </body>
</html>
